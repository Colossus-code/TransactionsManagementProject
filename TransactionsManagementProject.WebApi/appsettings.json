{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "ApiCalls": {
    "Products": "https://localhost:7223/ExternalResources/Products.json",
    "Transformations": "https://localhost:7223/ExternalResources/Transformations.json"
  },
  "PathFiles": {
    "Products": "../TransactionsManagementProject.InfrastructureData/LocalFiles/Products.json",
    "Transformations": "../TransactionsManagementProject.InfrastructureData/LocalFiles/Transformations.json"
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.File" ],
    "MinimumLevel": "Information",
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "path": "Logs/logs.txt",
          "outputTemplate": "[{Timestamp:HH:mm:ss} {SourceContext} [{Level}] {Message}{NewLine}{Exception}",
          "formatter": {
            "type": "Serilog.Formatting.Compact.CompactJsonFormatter, Serilog.Formatting.Compact"
          }
        }
      }
    ]
  },
  "AllowedHosts": "*"
}
